<%- include('../partials/header') %>
<style>
        .article-container {
            max-width: 920px;
            margin: 40px auto;
            background-color: #fff;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        }

        .article-header {
            padding: 40px 40px 0;
        }

        .article-title {
            text-align: center;
            padding-top: 40px;
            font-size: 42px;
            font-weight: 800;
            color: #1d2b3a;
            margin-bottom: 20px;
            line-height: 1.2;
        }

        .featured-image {
            width: 100%;
            height: auto;
            max-height: 500px;
            object-fit: cover;
        }

        .article-content {
            padding: 40px;
        }

        .article-intro {
            font-size: 20px;
            color: #555;
            margin-bottom: 30px;
            line-height: 1.7;
        }

        

        .section-heading {
            font-size: 28px;
            font-weight: 700;
            color: #1d2b3a;
            margin-top: 50px;
            margin-bottom: 25px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f0f0f0;
        }

        .church-description {
            font-size: 16px;
            color: #444;
            margin-bottom: 15px;
            line-height: 1.7;
        }

        
